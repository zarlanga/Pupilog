
<form method="POST" action="/@<%=user.id%>"  >
  <input type="text" placeholder="ponga su nombre" name="nombreComentador" />
  <br>
  <input type="textarea" name="comentario" placeholder="aca iria el comentario" />
  <br>
  <input type="submit" value="enviar"> 
</form>

<% user.comments.forEach((c) => { %>
  <h3><%=c.nombreComentador%>:</h3>
  <h4><%=c.comentario%> </h4>
<% }) %>